<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import fxmltableview.*?>

<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?>


<GridPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="capaControlador.InterfazUsuarioController">
    <stylesheets>
        <URL value="@interfazusuario.css" />
    </stylesheets>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
	<Label style="-fx-font: NORMAL 20 Tahoma;" text="Libreta de doctores"                
        GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>
      <TableView fx:id="tablaDoctores" editable="true"  GridPane.columnIndex="0" 
        GridPane.rowIndex="1">
        <columns>
      <TableColumn prefWidth="100.0" text="ID" fx:id="firstNameColumn">
        <cellValueFactory>
          <PropertyValueFactory property="Cedula" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn prefWidth="100.0" text="Nombre">
        <cellValueFactory>
          <PropertyValueFactory property="Nombre" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn prefWidth="100.0" text="Especialidad">
        <cellValueFactory>
          <PropertyValueFactory property="Especialidad" />
        </cellValueFactory>
      </TableColumn>
      <TableColumn prefWidth="200.0" text="Telefono">
        <cellValueFactory>
          <PropertyValueFactory property="Telefono" />
        </cellValueFactory>
      </TableColumn>
     </columns> 
      </TableView>
      <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="0" 
          GridPane.rowIndex="2">
          <TextField fx:id="idDoctorField" promptText="ID"
               prefWidth="90"/>
          <TextField fx:id="nombreDoctorField" promptText="Nombre"
               prefWidth="90"/>
          <TextField fx:id="especialidadField" promptText="Especialidad"
          		prefWidth="90"/>
          <TextField fx:id="telefonoField" promptText="Telefono"
               prefWidth="150"/>
          <Button text="Agregar" onAction="#addDoctor"/>
     </HBox>

</GridPane>
