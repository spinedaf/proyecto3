<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import fxmltableview.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.cell.*?>

<GridPane id="DoctorsPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="capaControlador.InterfazUsuarioController">
       
	<padding>
	    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
	</padding>
	   <children>
	<Label style="-fx-font: NORMAL 15 Tahoma;" text="Libreta de doctores" GridPane.columnIndex="0" GridPane.rowIndex="0" />
	     <TableView fx:id="tablaDoctores" editable="true" GridPane.columnIndex="0" GridPane.rowIndex="1">
	       <columns>
	     <TableColumn fx:id="firstNameColumn" prefWidth="100.0" text="ID">
	       <cellValueFactory>
	         <PropertyValueFactory property="Cedula" />
	       </cellValueFactory>
	     </TableColumn>
	     <TableColumn prefWidth="100.0" text="Nombre">
	       <cellValueFactory>
	         <PropertyValueFactory property="Nombre" />
	       </cellValueFactory>
	     </TableColumn>
	     <TableColumn prefWidth="100.0" text="Especialidad">
	       <cellValueFactory>
	         <PropertyValueFactory property="Especialidad" />
	       </cellValueFactory>
	     </TableColumn>
	     <TableColumn prefWidth="200.0" text="Telefono">
	       <cellValueFactory>
	         <PropertyValueFactory property="Telefono" />
	       </cellValueFactory>
	     </TableColumn>
	    </columns> 
	     </TableView>
	     <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
	        <children>
	            <TextField fx:id="idDoctorField" prefWidth="90" promptText="ID" />
	            <TextField fx:id="nombreDoctorField" prefWidth="90" promptText="Nombre" />
	            <TextField fx:id="especialidadField" prefWidth="90" promptText="Especialidad" />
	            <TextField fx:id="telefonoField" prefWidth="150" promptText="Telefono" />
	            <Button onAction="#addDoctor" text="Agregar" />
	        </children>
	    </HBox>
	   </children>
	        <columnConstraints>
	           <ColumnConstraints />
	        </columnConstraints>
	        <rowConstraints>
	           <RowConstraints />
	           <RowConstraints />
	           <RowConstraints />
	        </rowConstraints>
   </GridPane>

